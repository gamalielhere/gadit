<ul class="list-group">
  <li class="list-group-item">
    <ul>
      <li class="arrows">
        <%= link_to article_path(vote: "up"), method: :patch, class: "btn btn-default", aria_label: "Left Align" do %>
            <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
        <% end %>
      </li>
      <li class="upvote-button upvote-counter2 arrows">
        <p><%= @article.total_votes_article %></p>
      </li>
      <li class="upvote-button arrows">
        <h1><%= @article.title %></h1>
      </li>
      <li class="arrows">
        <%= link_to article_path(vote: "down"), method: :patch, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
        <% end %>
      </li>
      <p>
        Created: <%= time_ago_in_words(@article.created_at) %> by <%= @article.account.username %>
      </p>
      <h3> <%= @article.description %> </h3>
      <% if current_account == @article.account %>
        <%= link_to 'EDIT POST', article_edit_path %>
        <br>
        <%= link_to 'DELETE POST', article_path, method: :delete, data: { confirm: "Are you sure? This action cannot be reverted." } %>
      <% end %>
    </ul>
  </li>
</ul>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.text_area :content, class: 'comments' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h3>Comments: </h3>
<ul class="list-group">
  <% @comments.each do |f| %>
    <li class="list-group-item">
    <li class="arrows">
      <%= link_to article_path(@article,vote: 'up'), method: :patch, class: "btn btn-default", aria_label: "Left Align" do %>
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
      <% end %>
    </li>
    <li class="upvote-button upvote-counter2 arrows">
      <p><%= f.total_votes_comment %></p>
    </li>
    <li class="upvote-button arrows">
      <p><%= f.account.username %> <%= time_ago_in_words(f.created_at) %></p>
    </li>
    <li class="arrows">
      <%= link_to article_path(vote: "down"), method: :patch, class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
      <% end %>
    </li>
    </li>
    <% if current_account == f.account %>
       <%= link_to "EDIT", edit_article_comment_path(@article, f) %>
      | <%= link_to "DELETE", [f.article, f], method: :delete, data: {confirm: "You won't be able to retrieve this comment. Are you sure you want to delete?"} %>
    <% end %>
    <h3><%= f.content %></h3>
  <% end %>
</ul>
