<h1><%= @article.title %></h1>
<p>
  Created: <%= @article.created_at.strftime("%m/%d/%Y") %> by <%= @article.account.username %>
</p>

<h3> <%= @article.description %> </h3>
<% if current_account == @article.account %>
  <%= link_to 'EDIT POST', article_edit_path %>
  <br>
  <%= link_to 'DELETE POST', article_path, method: :delete, data: { confirm: "Are you sure? This action cannot be reverted." } %>
<% end %>

<ul class="list-group">
  <% @comments.each do |f| %>
    <li style="list-style: none;" class="list-group-item">
      <p><%= f.account.username %></p>
      <h3><%= f.content %></h3>
    </li>
  <% end %>
</ul>
